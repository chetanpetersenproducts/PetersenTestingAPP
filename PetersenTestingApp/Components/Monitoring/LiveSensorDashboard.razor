<h3>LiveSensorDashboard</h3>

@if (Readings?.Any() == true)
{
    <table class="table">
        <thead>
            <tr>
                <th>Sensor</th>
                <th>Time</th>
                <th>Pressure (PSI)</th>
                <th>Battery (V)</th>
                <th>Temp (°C)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Readings)
            {
                <tr>
                    <td>@r.SensorID</td>
                    <td>@r.TimeStamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@r.PressurePSI</td>
                    <td>@r.BatteryVoltage</td>
                    <td>@r.Temperature</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Loading sensor data...</p>
}

@code {
    [Parameter]
    public List<SensorReading> Readings { get; set; }
}


